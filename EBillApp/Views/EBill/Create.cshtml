@model EBillApp.Models.BillDetail

@{
    ViewBag.Title = "Create";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6 offset-3 shadow rounded">

            @using (Html.BeginForm())
            {
                <div class="mt-2">
                    <h3 class="text-center">Create E-Bill</h3>

                </div>
                <div class="mb-3">
                    <label class="form-label">Customer Name</label>
                    @Html.TextBoxFor(modelItems => modelItems.CustomerName, new { @class = "form-control form-control-sm" })

                </div>

                <div class="mb-3">
                    <label class="form-label">Mobile Number</label>
                    @Html.TextBoxFor(modelItems => modelItems.MobileNumber, new { @class = "form-control form-control-sm" })


                </div>
                <div class="mb-3">
                    <label class="form-label">Customer Address</label>
                    @Html.TextBoxFor(modelItems => modelItems.CustomerAddress, new { @class = "form-control form-control-sm" })

                </div>
                <div class="mb-3">
                    <div class="mb-2">
                        <span class="h5">Items</span">
                        <button class="btn btn-sm btn-primary border float-end"type="button" data-bs-toggle="modal" data-bs-target="#modalbox">Add</button>
                    </div>

                    <table id="items" class="table table-striped table-responsive table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Product Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Quantity
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>

                    </table>
                </div>

                <div class="mb-3">
                    
                    <button type="submit" class="btn btn-sm btn-success" onclick="Validate()">save</button>

                </div>


            }

        </div>
    </div>

</div>
<div class="modal fade" id="modalbox" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">

                <div class="mb-3">
                    <label class="form-label">Product Name</label>
                    <input type="text" class="form-control form-control-sm" placeholder="Enter Product name" id="productname" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input type="text" class="form-control form-control-sm" placeholder="Enter Price" id="price" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Quantity</label>
                    <input type="text" class="form-control form-control-sm" placeholder="Enter Quantity" id="quantity" />
                </div>
                <div class="mb-3">
                    <button type="button" class="btn btn-sm btn-success" id="addItem">
                        Add
                    </button>
                    <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal" >Close</button>
                </div>
            </div>
        </div>
    </div>
</div>



